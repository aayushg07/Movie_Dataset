<!-- update_movie.hbs -->
{{#> layout}}
<head>
      <link rel="stylesheet" href="/style.css">  <!-- This is the global CSS for all pages -->
    {{!-- <link rel="stylesheet" href="/update_movie.css">  <!-- Page-specific CSS if needed --> --}}
</head>
<h2>Edit Movie  {{Title}}</h2>
{{#if successMessage}}
    <div class="success-message">{{successMessage}}</div>
{{/if}}

<form action="/movies/update/{{Movie_ID}}" method="POST">

    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="Title" value="{{Title}}" required>
    </div>

    <div class="form-group">
        <label for="imdbRating">IMDb Rating:</label>
        <input type="number" id="imdbRating" name="IMDB Rating" value="{{imdbRating}}" step="0.1" min="0" max="10">
    </div>

    <div class="form-group">
        <label for="year">Year:</label>
        <input type="number" id="year" name="Year" value="{{Year}}" required>
    </div>

    <div class="form-group">
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="Genre" value="{{Genre}}" required>
    </div>

    <button type="submit">Update Movie</button>
</form>

<a href="/movies" class="back-button">Cancel</a>
{{/layout}}
